<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-extend="web_editor.dialog.link">
        <t t-jquery=".list-group-item.form-group">
            this.removeClass('active');
        </t>
        <t t-jquery=".list-group-item.form-group:has(#link-external)" t-operation="before">
            <li class="list-group-item form-group">
                <h4 class="list-group-item-heading">
                    <label for="link-page" class="control-label">
                        Page
                    </label>
                </h4>
                <input class="page form-control url-source" id="link-page" type="hidden"/>
            </li>
        </t>
    </t>

    <div t-name="website.homepage_editor_welcome_message" class="container o_homepage_editor_welcome_message">
        <div class="row mt96 mb96">
            <div class="col-sm-5 col-md-6 hidden-xs">
                <img src="/website/static/src/img/welcome_message/window.png" class="img img-responsive center-block" width="300"/>
            </div>
            <div class="col-sm-7 col-md-6">
                <h2 class="mt0">Welcome to your <b>Homepage</b>!</h2>
                <p class="lead"> Let's start designing.</p>
                <div class="o_tooltip_container">Follow the <div class="o_tooltip top o_animated"/> signs to start.</div>
            </div>
        </div>
    </div>
</templates>
