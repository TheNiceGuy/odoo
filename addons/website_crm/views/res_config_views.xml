<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="website_crm_config_settings_view_form" model="ir.ui.view">
        <field name="name">website.crm.config.settings.form.inherit</field>
        <field name="model">website.config.settings</field>
        <field name="inherit_id" ref="website.view_website_config_settings"/>
        <field name="arch" type="xml">
            <group name="website_crm_config" position="after">
                <group string="CRM" groups="base.group_no_one">
                    <label string="Default Sales Team" for="team_id"/>
                    <div class="oe_inline">
                        <field name="team_id"/>
                    </div>
                    <label string="Default Salesperson" for="user_id"/>
                    <div class="oe_inline">
                        <field name="user_id"/>
                    </div>
                </group>
            </group>
        </field>
    </record>
</odoo>
